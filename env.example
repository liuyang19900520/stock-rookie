# FMP API Configuration
FMP_API_KEY=your_fmp_api_key_here

# Database Configuration (AWS RDS)
DB_URL=postgresql+asyncpg://username:password@your-database-host:5432/database_name

# Rate Limiting
RATE_LIMIT_RPS=3
RATE_LIMIT_BURST=6

# Timezone Configuration
TIMEZONE=Asia/Tokyo

# Scheduling Configuration
INGEST_SCHEDULE_CRON=0 18 * * *

# Cache Configuration
CACHE_TTL=300

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_BASE=0.5

# Coverage Threshold
COVERAGE_THRESHOLD=0.8

# Environment Configuration
ENVIRONMENT=production  # development, test, production

# CORS Configuration (optional, uses default if not set)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Server Configuration
HOST=0.0.0.0
PORT=8000
