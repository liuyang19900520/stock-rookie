    "decision_rules": {
        "score_to_rating": [
            {
                "min_score": 85,
                "rating": "BUY",
                "sizing": "full_or_overweight"
            },
            {
                "min_score": 75,
                "rating": "ACCUMULATE",
                "sizing": "build_on_dips"
            },
            {
                "min_score": 65,
                "rating": "HOLD",
                "sizing": "neutral"
            },
            {
                "min_score": 0,
                "rating": "REDUCE/WAIT",
                "sizing": "underweight"
            }
        ],
        "red_flags": [
            {
                "id": "cet1",
                "cond": "< 10.0",
                "action": "DOWNGRADE_ONE_LEVEL"
            },
            {
                "id": "lcr_nsfr",
                "cond": "LCR < 100 or NSFR < 100",
                "action": "DOWNGRADE_ONE_LEVEL"
            },
            {
                "id": "stablecoin_custody",
                "cond": "drops_to_none",
                "action": "DOWNGRADE_ONE_LEVEL"
            }
        ],
        "buy_triggers": [
            "pb score >= 90 AND roe_ttm >= 12 AND no_red_flags",
            "price_change_3m score <= 75 AND core_fundamentals_weighted >= 75",
            "tokenization_initiatives >= 2 AND regulatory_tailwind >= 85"
        ],
        "trim_triggers": [
            "pb score <= 55 OR dividend_yield_ttm score <= 60",
            "revenue_yoy score <= 60"
        ]
    },
